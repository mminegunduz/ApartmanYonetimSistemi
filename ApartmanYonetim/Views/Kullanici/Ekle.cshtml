@model Entities.Models.Kullanici

@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
}

<h2 class="text-center">Yeni Kullanıcı Ekle</h2>

<form asp-action="Ekle" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label asp-for="KullaniciId" class="form-label"></label>
        <input asp-for="KullaniciId" class="form-control" />
        <span asp-validation-for="KullaniciId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="KullaniciAd" class="form-label"></label>
        <input asp-for="KullaniciAd" class="form-control" />
        <span asp-validation-for="KullaniciAd" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Sifre" class="form-label"></label>
        <input asp-for="Sifre" class="form-control" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
