@model Entities.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcıyı Düzenle";
}

<h2 class="text-center mb-4">Kullanıcı Bilgilerini Düzenle</h2>

<div class="container w-50">
    <form asp-action="Duzenle" method="post">
        <input type="hidden" asp-for="KullaniciId" />

        <div class="mb-3">
            <label asp-for="KullaniciAd" class="form-label">Ad Soyad</label>
            <input asp-for="KullaniciAd" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Sifre" class="form-label">Şifre</label>
            <input asp-for="Sifre" class="form-control" type="password" />
        </div>

        <div class="mb-3">
            <label asp-for="Mail" class="form-label">E-Posta</label>
            <input asp-for="Mail" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefon</label>
            <input asp-for="Telefon" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <a href="/Kullanici/Index" class="btn btn-secondary">İptal</a>
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    </form>
</div>
