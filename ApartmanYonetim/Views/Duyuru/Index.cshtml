@model IEnumerable<Entities.Models.Duyuru>

<h2>Duyurular</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>İçerik</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var duyuru in Model)
        {
            <tr>
                <td>@duyuru.Baslik</td>
                <td>@duyuru.Icerik</td>
                <td>
                    <form asp-controller="Duyuru" asp-action="Sil" method="post" onsubmit="return confirm('Bu duyuruyu silmek istediğinize emin misiniz?');">
                        <input type="hidden" name="id" value="@duyuru.DuyuruId "/>
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Home/Yonetici" class="btn btn-primary " ; >← Geri Dön</a>
